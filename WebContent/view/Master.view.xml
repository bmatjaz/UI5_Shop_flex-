<mvc:View
	controllerName="sap.ui.flex.shop.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{i18n>categorySelection}"
		backgroundDesign="Solid">
		<Table
			id="productsTable"
			inset="false"
			items="{/Categories}"
			class="sapFDynamicPageAlignContent"
			width="auto">
			<columns>
				<Column width="12em">
					<Text text="{i18n>categories}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Navigation" press=".onListItemPress">
					<cells>
						<ObjectIdentifier title="{CategoryName}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>