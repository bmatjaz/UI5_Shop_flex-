<mvc:View
	controllerName="sap.ui.flex.shop.controller.Orders"
    xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{i18n>ordersViewTitle}"
		backgroundDesign="Solid"
		showNavButton="{appView>/smallScreenMode}"
		navButtonPress=".onBack"
		showFooter="true">
        <List
            id="idList"
            items="{/Orders}"
            growing="true"
            growingThreshold="50">
            <StandardListItem
                type="Active"
                press="onListItemPress"
                title="{OrderID}"
                description="{CustomerID}"/>
        </List>
	</Page>
</mvc:View>