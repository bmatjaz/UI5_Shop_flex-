<mvc:View
    controllerName="sap.ui.flex.shop.controller.ShipperInfo"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <VBox>
        <Label text="OrderDate" />
        <Text text="{OrderDate}" />
        <Label text="Required date" />
        <Text text="{RequiredDate}" />
        <Label text="Shipped date" />
        <Text text="{ShippedDate}" />
        <Label text="Shipper name" />
        <Text text="{ShipName}" />
        <Label text="Address" />
        <Text text="{ShipAddress}" />
        <Label text="Postal code" />
        <Text text="{ShipPostalCode}" />
        <Label text="Country" />
        <Text text="{ShipCountry}" />	
    </VBox>
</mvc:View>
           