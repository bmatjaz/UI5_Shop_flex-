<mvc:View
	controllerName="sap.shop.controller.Menu"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<Page
		title="{i18n>menuViewTitle}">
        <List
			items="{/Categories}">
			<items>
				<ObjectListItem
					title="{CategoryName}"
					type="Active"
					press="onListItemPress" />
			</items>
		</List>
	</Page>
</mvc:View>
