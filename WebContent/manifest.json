{
	"_version": "1.12.0",
	"sap.app": {
		"id": "sap.shop",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "appTitle",
		"description": "appDescription",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"dataSources": {
			"mainService": {
				"uri": "http://localhost:8081/https://services.odata.org/V2/Northwind/Northwind.svc/",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0"
				}
			}
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},
	"sap.ui5": {
		"rootView": {
			"viewName": "sap.shop.view.App",
			"type": "XML",
			"async": true,
			"id": "layout"
		},
		"dependencies": {
			"minUI5Version": "1.60",
			"libs": {
				"sap.m": {}
			}
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "sap.shop.i18n.i18n"
				}
			},
			"": {
				"type": "sap.ui.model.odata.v2.ODataModel",
				"dataSource": "mainService"
			}
		},
		"resources": {
			"css": [
				{
					"uri": "css/style.css"
				}
			]
		},
		"routing": {
			"config": {
				"async": true,
				"routerClass": "sap.f.routing.Router",
				"viewType": "XML",
				"viewPath": "sap.shop.view",
				"controlId": "layout",
				"transition": "slide",
				"bypassed": {
					"target": "notFound"
				},
				"homeRoute": "home"
			},
			"routes": [
				{
					"name": "home",
					"pattern":"",
					"target": ["menu", "products"],
					"layout": "TwoColumnsMidExpanded"
				},
				{
					"name": "cart",
					"pattern":"cart",
					"target": ["menu", "products", "cart"]
				}
			],
			"targets":{
				"menu": {
					"controlAggregation": "beginColumnPages",
					"viewName": "Menu"
				}, 
				"products": {
					"viewName": "Products",
					"controlAggregation": "midColumnPages"
				},
				"cart": {
					"viewName": "Cart",
					"controlAggregation": "endColumnPages"
				}
			}
		}
	}
}
