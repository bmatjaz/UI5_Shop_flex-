{
	"_version": "1.12.0",
	"sap.app": {
		"id": "sap.shop.",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "appTitle",
		"description": "appDescription",
		"applicationVersion": {
			"version": "1.0.0"
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},
	"sap.ui5": {
		"rootView": {
			"viewName": "sap.shop.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"dependencies": {
			"minUI5Version": "1.60",
			"libs": {
				"sap.m": {}
			}
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "sap.shop.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [
				{
					"uri": "css/style.css"
				}
			]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewPath": "sap.shop.view",
				"viewType": "XML",
				"controlId": "layout",
				"transition": "slide",
				"async": true
			},
			"routes": [
				{
					"name": "home",
					"pattern":"",
					"target": ["menu", "welcome"]
				}
			],
			"targets":{
				"menu": {
					"viewName": "Menu",
					"viewLevel": 1,
					"controlAggregation": "beginColumnPages"
				},
				"welcome": {
					"viewName": "Welcome",
					"viewLevel": 1,
					"controlAggregation": "midColumnPages"
				}				
			}
		}
	}
}
